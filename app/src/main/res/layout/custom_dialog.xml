<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">
<RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/text" android:text="TAB"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_below="@+id/text"
            android:scaleType="centerCrop" />

<ImageButton android:layout_height="20dp" android:layout_width="20dp" android:id="@+id/button" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:background="@drawable/outline_close_black_18"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>